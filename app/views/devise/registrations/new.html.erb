
<% if devise_error_messages!.present? %>
  <div class="alert-notif-login alert alert-danger position-absolute">
  <button type="button" class="close" data-dismiss="callout" aria-label="Close">
    <span>Ã—</span>
  </button> 
  <div class=""><%= devise_error_messages! %></div>
  </div>
<% end %> 

<div class="row no-gutters min-h-fullscreen bg-white">
  <div class="col-md-6 col-lg-7 col-xl-8 d-none d-md-block bg-img" style="background-image: url(../assets/img/gallery/2.jpg)" data-overlay="5">

    <div class="row h-100 pl-50">
      <div class="col-md-10 col-lg-8 align-self-end">
        <img src="../assets/img/logo-light-lg.png" alt="...">
        <br><br><br>
        <h4 class="text-white">The admin is the best admin framework available online.</h4>
        <p class="text-white">Credibly transition sticky users after backward-compatible web services. Compellingly strategize team building interfaces.</p>
        <br><br>
      </div>
    </div>

  </div>
  <div class="col-md-6 col-lg-5 col-xl-4 align-self-center">
    <div class="px-80 py-30">
      <h4>Register an account</h4>
      <p><small>All fields are required.</small></p>
      <br>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: 'form-type-line'}) do |f| %>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" checked>
          <label class="custom-control-label">I agree to all <a class="text-primary" href="#">terms</a></label>
        </div>
      </div>
      
      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-bold btn-block btn-primary" %>
      </div>
    <% end %>

    <hr class="w-30px">

    <p class="text-center text-muted fs-13 mt-20">Already have an account? 
    <%= link_to "Sign in", new_user_session_path %>
    </p>
    </div>
  </div>
</div>